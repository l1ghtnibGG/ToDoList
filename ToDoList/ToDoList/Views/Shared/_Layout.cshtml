<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/editPage.css"/> 
    <link rel="stylesheet" href="~/css/homePage.css"/>
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
</head>
<body>
<header>
    @if (User.Identity.IsAuthenticated)
    {
        <a style="text-decoration: none;color: white" asp-controller="Home" asp-action="Index" asp-route-Id="@User.Claims.First().Value">to do list</a>
        
        <div id="logOut">
            <a style="text-decoration: none;color: white" asp-controller="Home" asp-action="LogOut">Log out</a>
        </div>
    }
    else
    {
        <a style="text-decoration: none;color: white" asp-controller="Home" asp-action="Login">to do list</a>
    }
</header>
<main>
    <div class="list">
        @RenderBody()
    </div>
</main>
<footer>
    <hr>
    <p>&copy 2023 - Kruglikov Vlad</p>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
